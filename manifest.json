{
  "manifest_version": 2,

  "name": "WhereIsThis",
  "description": "This extension shows where a location is on google maps",
  "version": "1.0",
      
  "icons": {
	"16":"map-icon.png",
	"48":"map-icon.png",
	"128":"map-icon.png"
  },
  "browser_action": {
    "default_icon": "map-icon.png",
    "default_popup": "map.html"
  },
  "content_scripts": [ 
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["js/map.js"]
    }
  ],
  "background": {
    "scripts": ["js/jquery-3.1.1.min.js", "js/contextMenu.js"],
	"persistent": false
  },
  "content_security_policy":"script-src 'self' https://maps.googleapis.com; object-src 'self'",
  "web_accessible_resources": ["map_viewer.html", "js/map_viewer.js"],
  "permissions": [ 
    "activeTab",
	"geolocation",
	"contextMenus",
	"tabs",
    "https://ajax.googleapis.com/*",
	"https://maps.googleapis.com/*"
  ]
}